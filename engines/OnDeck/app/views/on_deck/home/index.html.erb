<div class="ondeck-top">
  <h4> <i class="fas fa-compact-disc"> </i> FRC On Deck </h4>
</div>

<div class="controls-window">
  <div class="container" style="max-width: 100%;">
    <div class="row">
      <% 3.times do |i| %>
        <div class="col-sm match-col" id='match-<%= i %>'>

          <div class="row">
            <div class="col-sm">
              <strong class="match-name">Match @ Event</strong>
            </div>
          </div>

          <div class="row">
            <div class="col-sm alliance blue">
              <div class="row">
                <% 3.times do |t| %>
                  <div class="col-sm team">
                    <strong class="team-number">5333</strong>
                    <p>
                      <span class="pps" data-toggle="tooltip" data-placement="top" title="Past Performance Score (PPS) - Aggregate of how well this team has done this season"><i class="fas fa-history"></i> 123</span> 
                      / 
                      <span class="gds" data-toggle="tooltip" data-placement="top" title="Global Dominance Score (GDS) - Aggregate of how well this team has done against all other events live now">22 <i class="fas fa-bolt"></i></span>
                    </p>
                  </div>
                <% end %>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-sm alliance red">
              <div class="row">
                <% 3.times do |t| %>
                  <div class="col-sm team">
                    <strong class="team-number">5663</strong>
                  </div>
                <% end %>
              </div>
            </div>
          </div>

        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="player-window">
  <iframe src="https://player.twitch.tv/?channel=firstinspires1" frameborder="0" scrolling="no" height="100%" width="100%" allowfullscreen> </iframe>
</div>