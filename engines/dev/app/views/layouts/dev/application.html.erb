<!DOCTYPE html>
<html>
<head>
  <title>Maven</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag    "dev/application", media: "all" %>

  <%= javascript_include_tag :application %>
</head>
<body>

<main class="wrapper">
  <nav class="navigation" id="navigation">
    <section class="container">
      <div style="float: right;">
        <% unless devise_controller? %>
          <% if user_signed_in? %>
            <a class="button button-clear"> <%= current_user.email %> </a>
            <%= link_to "Logout", destroy_user_session_path, method: :delete, class: 'button button-clear' %>
          <% else %>
            <%= link_to "Login", new_user_session_path, class: 'button button-clear' %>
          <% end %>
        <% end %>
      </div>
    </section>
  </nav>

  <div class="container">
    <%= yield %>
  </div>
</div>

</body>
</html>
